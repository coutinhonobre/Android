<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fundoCards">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/histPedidosItemCardView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:foregroundGravity="center_vertical"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/histPedidosItemCardViewTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="28sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/histPedidosItemNumeroPedidoFieldTxt"
            style="@style/CardTitleFieldsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Nº Ped. RCA/ERP:"
            app:layout_constraintStart_toEndOf="@+id/histPedidosItemCardView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/histPedidosItemNumeroPedidoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="55545.544"
            app:layout_constraintStart_toEndOf="@+id/histPedidosItemNumeroPedidoFieldTxt"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/histPedidosItemClienteFieldTxt"
            style="@style/CardTitleFieldsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Cliente:"
            app:layout_constraintStart_toEndOf="@+id/histPedidosItemCardView"
            app:layout_constraintTop_toBottomOf="@+id/histPedidosItemNumeroPedidoFieldTxt" />

        <TextView
            android:id="@+id/histPedidosItemClienteTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90990. Af igor coutinho ferreira"
            app:layout_constraintStart_toEndOf="@+id/histPedidosItemClienteFieldTxt"
            app:layout_constraintTop_toBottomOf="@+id/histPedidosItemNumeroPedidoTxt" />

        <TextView
            android:id="@+id/histPedidosItemStatusFieldTxt"
            style="@style/CardTitleFieldsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Processamento"
            app:layout_constraintStart_toEndOf="@+id/histPedidosItemCardView"
            app:layout_constraintTop_toBottomOf="@+id/histPedidosItemClienteFieldTxt" />

        <TextView
            android:id="@+id/histPedidosItemCriticaTxt"
            style="@style/CardTitleFieldsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_maxima_critica_alerta"
            android:text="Crítica:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.091"
            app:layout_constraintStart_toEndOf="@+id/histPedidosItemStatusFieldTxt"
            app:layout_constraintTop_toBottomOf="@+id/histPedidosItemClienteTxt" />

        <TextView
            android:id="@+id/histPedidosItemHoraTxt"
            style="@style/CardTitleFieldsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="5"
            android:text="15:18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/histPedidosItemLegendaTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_maxima_legenda_corte"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/histPedidosItemHoraTxt" />

        <TextView
            android:id="@+id/histPedidosItemValorTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 617,40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/histPedidosItemLegendaTxt" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

